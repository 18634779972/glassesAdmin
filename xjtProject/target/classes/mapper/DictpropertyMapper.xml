<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.xjt.dao.master.DictpropertyDao" >

    <resultMap id="BaseResultMap" type="com.xjt.entity.Dictproperty" >
        <id column="Property" property="property" jdbcType="VARCHAR" />
    </resultMap>
    <!--批量删除属性-->
    <delete id="deleteByPrimaryKey" parameterType="java.util.List" >
        delete from dictproperty
        where Property in
          <foreach collection="properties" item="pro" index="index" separator="," close=")" open="(">
              #{property,jdbcType=VARCHAR}
          </foreach>

    </delete>

    <insert id="insert" parameterType="com.xjt.entity.Dictproperty" >
        insert into dictproperty (Property)
        values (#{property,jdbcType=VARCHAR})
    </insert>

    <insert id="insertSelective" parameterType="com.xjt.entity.Dictproperty" >
        insert into dictproperty
        <trim prefix="(" suffix=")" suffixOverrides="," >
            <if test="property != null" >
                Property,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides="," >
            <if test="property != null" >
                #{property,jdbcType=VARCHAR},
            </if>
        </trim>
    </insert>

    <!--批量插入-->
    <insert id="insertPropertiesBatch" parameterType="java.util.List">
        insert into dictproperty (Property)
        values
        <foreach collection="properties" item="pro" index="index" separator=",">
            (#{property,jdbcType=VARCHAR})
        </foreach>
    </insert>
    <!--根据名称查看，默认所有-->
    <select id="queryAllProperties" parameterType="com.xjt.entity.Dictproperty" resultMap="BaseResultMap">
        select Property
            from dictproperty
            <where>
                <if test="property != null">
                    and Property like concat('%',#{property},'%')
                </if>
            </where>
    </select>
</mapper>